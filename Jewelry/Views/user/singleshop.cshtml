@model IEnumerable<Jewelry.Models.ItemDetails>

<!-- Open Content -->

<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            @foreach (var item in Model){
            <div class="col-lg-5 mt-5">
               
                <div class="card mb-3">
                    
                    <img class="card-img img-fluid" src="@item.imgUrl" >
                    
                </div>
            
                <div class="row">
              
                </div>
            </div>
            <!-- col end -->
            <div class="col-lg-6 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h4"></h1>
                        <h1 class="h2">@item.prodName</h1>
                        <p class="h3">@item.MRP.ToString("C", new CultureInfo("en-US"))</p>
                        
                        <ul style="margin-left:-4%">
                            <li class="list-inline-item">
                                <h6>Brand:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@item.brandMst.Brand_Type</strong></p>
                            </li>
                            <br>
                            <li class="list-inline-item">
                                <h6>Product:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@item.prodMst.Prod_Type</strong></p>
                            </li>
                            <br>
                            <li class="list-inline-item">
                                <h6>Certification:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@item.certifyMst.Cat_Name</strong></p>
                            </li>
                        </ul>

                        
                        

                        <h6>Specification:</h6>
                        <ul class="list-unstyled pb-3">
                            <li>Gold Carat: @item.goldKrtMst.Gold_Crt</li>
                            <li>Gold Weight: @item.Gold_Wt Gram</li>
                            <li>Gold Amount: @item.Gold_Amt.ToString("C", new CultureInfo("en-US")) </li>
                            <li>Pcs Of @item.prodMst.Prod_Type: @item.Dim_Pcs</li>
                            <li>Wieght of @item.prodMst.Prod_Type: @item.Stone_Wt</li>
                            <li>Amount of @item.prodMst.Prod_Type: @item.Dim_Amt.ToString("C", new CultureInfo("en-US"))</li>
                            <li>Total Gross Weight of @item.catMst.Cat_Name: @item.Tot_Gross_Wt</li>
                            
                        </ul>
                    
                        <form action="" method="GET">
                            <input type="hidden" name="id" value="@item.ItemMstID" >
                            <div class="row">
                                
                                <div class="col-auto">
                                    <ul class="list-inline pb-3">
                                        <li class="list-inline-item text-right" >
                                            Quantity
                                            <input type="hidden" name="qty" id="product-quanity" value="1" >
                                        </li>
                                        <li class="list-inline-item"><span class="btn btn-warning" id="btn-minus">-</span></li>
                                        <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                                        <li class="list-inline-item"><span class="btn btn-warning" id="btn-plus">+</span></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <button type="submit" class="btn btn-warning btn-lg" name="submit" value="buy">Buy</button>
                                </div>
                                <div class="col d-grid">
                                        <a type="submit" name="cart" class="btn btn-warning btn-lg" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ItemMstID">Add To Cart</a>
                                </div>
                            </div>
                        </form>
                            
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>*@
                       
