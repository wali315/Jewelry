}

<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="@Model.imgUrl" alt="Product Image">
                </div>
            </div>
            <div class="col-lg-6 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h4"></h1>
                        <h1 class="h2">@Model.prodName</h1>
                        <p class="h3">@Model.MRP.ToString("C", new CultureInfo("en-US"))</p>

                        <ul>
                            <li>
                                <h6>Brand:</h6>
                            </li>
                            <li>
                                <p class="text-muted"><strong>@Model.brandMst.Brand_Type</strong></p>
                            </li>
                            <li>
                                <h6>Product:</h6>
                            </li>
                            <li>
                                <p class="text-muted"><strong>@Model.prodMst.Prod_Type</strong></p>
                            </li>
                            <li>
                                <h6>Certification:</h6>
                            </li>
                            <li>
                                <p class="text-muted"><strong>@Model.certifyMst.Cat_Name</strong></p>
                            </li>
                        </ul>

                        <h6>Specifications:</h6>
                        <ul class="list-unstyled pb-3">
                            <li>Gold Carat: @Model.goldKrtMst.Gold_Crt</li>
                            <li>Gold Weight: @Model.Gold_Wt Gram</li>
                            <li>Gold Amount: @Model.Gold_Amt.ToString("C", new CultureInfo("en-US"))</li>
                            <li>Pcs Of @Model.prodMst.Prod_Type: @Model.Dim_Pcs</li>
                            <li>Weight of @Model.prodMst.Prod_Type: @Model.Stone_Wt</li>
                            <li>Amount of @Model.prodMst.Prod_Type: @Model.Dim_Amt.ToString("C", new CultureInfo("en-US"))</li>
                            <li>Total Gross Weight of @Model.catMst.Cat_Name: @Model.Tot_Gross_Wt</li>
                        </ul>

                        <form asp-controller="Cart" asp-action="Add" method="post">
                          
                            <div class="row pb-3">
                                @*<div class="col d-grid">
                                    <button type="submit" class="btn btn-warning btn-lg" name="submit" value="buy">Buy</button>
                                </div>*@
                                <div class="col d-grid">
                                    <button type="submit" name="cart" class="btn btn-warning btn-lg" asp-controller="Cart" asp-action="Add" asp-route-id="@Model.ItemMstID">Add To Cart</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

